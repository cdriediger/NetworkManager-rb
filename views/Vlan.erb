<head>
    <link href="<%= url('/base.css') %>" rel="stylesheet" type="text/css" />
</head>
<body>
<!-- Main Manu -->

<nav>
<h1>Menu</h1>
<ul>
    <li><a href="/ui/home">Home</a></li>
    <li><a href="switches/create">Create new Switch</a></li>
    <li><a href="profiles/create">Create new Profile</a></li>
    <li><a href="vlans/create">Create new VLAN</a></li>
</ul>
</nav>

<!-- Main content -->
<section class="table-wrapper">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
        <div class="box-header">
            <h2 class="box-title">Manage <%= @vlan[:name] %></h2>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="fl-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>VLAN ID</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                <td><%= @vlan[:id] %></td>
                <td><%= @vlan[:name] %></td>
                <td><%= @vlan[:vlanid] %></td>
                </tr>
            </table>
        </div>
        <div class="box-header">
            <h2 class="box-title">Switches:</h2>
        </div>
        <div class="box-body">
            <table class="fl-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>IP</th>
                <th>Location</th>
            </tr>
            </thead>
            <tbody>
                <% @switchList.each do |switch| %>
                    <tr>
                        <form method="post" action="/ui/switches/<%= switch[:id] %>/removevlan/<% @vlan[:id] %>">
                            <td><input type="text" class="form-control" name="switchid" value="<%= switch[:id] %>"></td>
                            <td><input type="text" class="form-control" name="name" value="<%= switch[:name]%>"></td>
                            <td><input type="text" class="form-control" name="ip" value="<%= switch[:ipv4]%>"></td>
                            <td><input type="text" class="form-control" name="location" value="<%= switch[:location]%>"></td>
                            <td>
                                <label for="update_button">
                                <button type="submit" name="update">Remove</button></label>
                            </td>
                        </form>
                    </tr>
                <%end%>
            </table>
        </div>
        <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>