<section class="content-header">
    <h1>
    VLAN <%= @vlan[:name] %>
    </h1>
    <ol class="breadcrumb">
    <li><a href='/ui/home'><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">VLAN <%= @vlan[:name] %></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">Manage <%= @vlan[:name] %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>VLAN ID</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                <td><%= @vlan[:id] %></td>
                <td><%= @vlan[:name] %></td>
                <td><%= @vlan[:vlanid] %></td>
                </tr>
            </table>
        </div>
        <div class="box-header">
            <h4 class="box-title">Switches:</h4>
        </div>
        <div class="box-body">
            <table id="example2" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>IP</th>
                <th>Location</th>
            </tr>
            </thead>
            <tbody>
                <% @switchList.each do |switch| %>
                    <tr>
                        <form method="post" action="/ui/switches/<%= switch[:id] %>/removevlan/<% @vlan[:id] %>">
                            <td><input type="text" class="form-control" name="switchid" value="<%= switch[:id] %>"></td>
                            <td><input type="text" class="form-control" name="name" value="<%= switch[:name]%>"></td>
                            <td><input type="text" class="form-control" name="ip" value="<%= switch[:ipv4]%>"></td>
                            <td><input type="text" class="form-control" name="location" value="<%= switch[:location]%>"></td>
                            <td>
                                <label for="update_button">
                                <button type="submit" name="update">Remove</button></label>
                            </td>
                        </form>
                    </tr>
                <%end%>
            </table>
        </div>
        <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>